<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Тёмная тема на базе MaterialComponents -->
    <style name="Theme.ApiClientKotlinV0" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Основные цвета (можете поменять под свой вкус) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Тёмный фон для Activity -->
        <item name="android:windowBackground">?android:colorBackground</item>
        <!-- Отключаем подсветку иконок в статус-баре -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Прочие настройки темы -->
    </style>
</resources>
